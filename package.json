{
  "name": "housewire-automation",
  "version": "1.0.0",
  "description": "Automated testing framework for www.houswire.com using Playwright + TypeScript with Cucumber (BDD)",
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js",
    "test:sanity": "cucumber-js --profile sanity",
    "test:regression": "cucumber-js --profile regression",
    "test:report": "open reports/cucumber-report.html",
    "test:sanity:report": "open reports/sanity-report.html",
    "test:regression:report": "open reports/regression-report.html",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "test:allure": "npm test && npm run allure:generate && npm run allure:open",
    "test:sanity:allure": "npm run test:sanity && npm run allure:generate && npm run allure:open",
    "test:regression:allure": "npm run test:regression && npm run allure:generate && npm run allure:open"
  },
  "keywords": ["playwright", "cucumber", "bdd", "automation", "testing", "e2e", "typescript", "gherkin"],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@cucumber/cucumber": "^12.5.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.9",
    "allure-commandline": "^2.36.0",
    "allure-cucumberjs": "^3.4.5",
    "dotenv": "^17.2.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
