{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": ".",
    "types": ["node", "@cucumber/cucumber", "@playwright/test"]
  },
  "include": ["features/**/*", "src/**/*"],
  "exclude": ["node_modules"]
}
